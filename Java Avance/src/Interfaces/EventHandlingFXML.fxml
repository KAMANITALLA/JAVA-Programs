<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="476.0" prefWidth="401.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Interfaces.EventHandlingFXMLController">
    <stylesheets>
        <URL value="@eventhandlingfxml.css" />
    </stylesheets>
   <children>
      <BorderPane layoutX="17.0" layoutY="19.0" prefHeight="439.0" prefWidth="368.0">
         <top>
            <Label alignment="CENTER" prefHeight="59.0" prefWidth="261.0" text="EVENT HANDLING" textFill="#166821" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial Rounded MT Bold" size="27.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="368.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnInsert" mnemonicParsing="false" onAction="#actionInsert" text="Insert" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#actionDelete" prefHeight="25.0" prefWidth="59.0" text="Delete" />
                  <Button fx:id="btnQuit" mnemonicParsing="false" onAction="#actionQuit" text="Quit">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <center>
            <TextArea fx:id="tArea" prefHeight="200.0" prefWidth="200.0" promptText="Entrer votre texte ici" style="-fx-background-color: white;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
